<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#835555"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="96sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">

        <Button
            android:id="@+id/button_clr"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttom"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_devide"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttom"
            android:text="รท"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_modulo"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttom"
            android:text="%"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_sqrt"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttom"
            android:text="S"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSecound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">

        <Button
            android:id="@+id/button_1"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_mul"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttom"
            android:text="x"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutThird"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">

        <Button
            android:id="@+id/button_4"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="4"
            android:textSize="30dp" />


        <Button
            android:id="@+id/button_5"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="6"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttom"
            android:text="-"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">

        <Button
            android:id="@+id/button_7"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="7"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="9"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttom"
            android:text="+"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">

        <Button
            android:id="@+id/button_power"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="^"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="0"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_point"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designnumbersbuttom"
            android:text="."
            android:textSize="30dp" />

        <Button
            android:id="@+id/button_result"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/designbuttom"
            android:text="="
            android:textSize="30dp" />

    </LinearLayout>

</LinearLayout>